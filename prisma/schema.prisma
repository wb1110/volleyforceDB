// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  phone      String?
  created_at DateTime @default(now())
}

model Service {
  id         Int      @id @default(autoincrement())
  name       String
  type       String
  created_at DateTime @default(now())
  price      Float
}